@import '../_vars.styl'
.bodyContent
  padding 1em
  horizontalCenter()
  .container_1080
    .columnize
      display: flex;
      flex-direction: row;
      img
        width 100%
        height auto
        max-width 670px
      .bodyDescription
        align justify;
        a
          text-decoration none;
          color gpn_green
          &:visited
            color #666
          &:hover
            color #2fabef
      .map
        width 50%
        padding-bottom 4em
  .bodySize
    width: 250px
  .container_250
    display: flex
    align-items: flex-end;
    vertical-align: top;
    justify-content: center
    text-align: center;
    .button
      background-color gpn_green
    .description
      color none
    .share
      color none
    .finePrint
      color none
