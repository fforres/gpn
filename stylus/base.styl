@require './_vars.styl';

body
  margin 0
  animation all 150ms

h1, h2, h3, h4, h5, p, li, ol
  sans(300)
  line-height: 1.5em
  color gpn_grey
  text-shadow: 0 0 1px rgba(0,0,0,0.2);
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizeLegibility;
  font-smooth: always;

p, li, ol
  font-size: 0.95em
  font-weight: 400

::selection
  background-color gpn_green
  color gpn_white

h1
  letter-spacing -1px
  font-size 2.2em
  color gpn_black

h2
  font-size 1.2em

h4
  font-size: 1.55em
  margin: 0
  padding-top: 1em
  padding-bottom: 0.3em

p
  word-wrap: break-word;
  box-sizing: border-box;
  margin 0 0 20px
  line-height: 1.55em

hr
  &.dotted
    border-top: dashed gpn_light_grey 1px
  &.light
    border-top: solid gpn_lighter_grey 1px
